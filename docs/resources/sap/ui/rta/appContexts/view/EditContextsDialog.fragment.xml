<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Dialog 
		id="editcontextdialog" 
		title="{i18n>EAC_DIALOG_HEADER}"
		resizable="true"
		draggable="true">
		<content>
			<Panel id="editcontextdialog-panel">
				<headerToolbar>
					<Toolbar id="editcontextdialog-toolbar">
						<Label 
							id="editcontextdialog-toolbarLabel" 
							labelFor="editcontextdialog-simpleForm" 
							text="Information" 
							design="Bold"/>
					</Toolbar>
				</headerToolbar>
				<content>
					<f:SimpleForm id="editcontextdialog-simpleForm"
						editable="true"
						layout="ResponsiveGridLayout"
						labelSpanXL="3"
						labelSpanL="3"
						labelSpanM="3"
						labelSpanS="12"
						adjustLabelSpan="false"
						emptySpanXL="4"
						emptySpanL="4"
						emptySpanM="4"
						emptySpanS="0"
						columnsXL="1"
						columnsL="1"
						columnsM="1"
						singleContainerFullSize="false">
						<f:content>
							<Label
								id="editcontextdialog-title-label"
								labelFor="editcontextdialog-title-input"
								text="{i18n>APP_CONTEXT_TITLE}" />
							<Input
								required="true"
								id="editcontextdialog-title-input" 
								value="{title}"
								placeholder="{i18n>PLACEHOLDER_INPUT_TITLE}"
								valueStateText="{i18n>VALUE_STATE_TITLE_INPUT}"/>
							<Label 
								id="editcontextdialog-description-label"
								labelFor="editcontextdialog-description-input"
								text="{i18n>MAA_DIALOG_DESCRIPTION}" />
							<TextArea 
								id="editcontextdialog-description-input"
								placeholder="{i18n>PLACEHOLDER_INPUT_DESCRIPTION}"
								rows="2" 
								value="{description}"/>
						</f:content>
					</f:SimpleForm>
				</content>
			</Panel>
		</content>
		<buttons>
			<Button 
				id="editcontextdialog-save" 
				type="Emphasized" 
				text="{i18n>MENU_BTN_EDIT}" 
				press="editSelect"/>
			<Button 
				id="editcontextdialog-close" 
				text="{i18n>EAC_DIALOG_CANCEL}" 
				press="editClose"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>